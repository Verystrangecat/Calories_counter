<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_firebase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="10dp"
            android:text="Login"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="E-mail"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edittext_login_emailf"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="example@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="Password"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edittext_login_passwordf"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="12345"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/btnLoginf"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Login"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_link_signupf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto"
            android:layout_gravity="center"
            android:text="Don't have an account? "
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="190dp"/>

        <Button
            android:id="@+id/btn_shortcutf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short cut" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>